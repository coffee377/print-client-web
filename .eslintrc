{
	"parser": "babel-eslint",
	"plugins": ["react"],
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["warn", "unix"],
		"quotes": ["off", "single"],
		"semi": ["error", "always"],
		"no-console": "off",
		"no-debugger": "off",
		"no-unused-vars": "off",
		"no-undef": "off"
	}
}
