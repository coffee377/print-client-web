root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 120

[{*.sht, *.html, *.shtm, *.shtml, *.ng, *.htm, *.xml}]
indent_style = tab
indent_size = 2

[{.babelrc, .stylelintrc, .eslintrc, jest.config, *.bowerrc, *.jsb3, *.jsb2, *.json}]
indent_style = tab
indent_size = 2

[{*.css, *.less, *.sass, *.scss}]
indent_style = tab
indent_size = 2

[{*.yml, *.yaml}]
indent_style = tab
indent_size = 2

[{*.js, *.jsx}]
indent_style = tab
indent_size = 2
#quote_type = single

[*.java]
indent_style = tab
wildcard_import_limit = 2
continuation_indent_size = 2
